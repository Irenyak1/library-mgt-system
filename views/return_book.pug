doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Return Book
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet')
  link(href='/css/styles.css' rel='stylesheet')
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    a.navbar-brand(href='/') Library Management Dashboard
    h4.card-title Welcome #{currentUser.firstName}
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.ms-auto
        li.nav-item
          a.nav-link(href='/books/addBook') Add Book
        li.nav-item
          a.nav-link(href='/users/addUser') Add User
        li.nav-item
          a.nav-link(href='/authors/addAuthor') Add Author
        li.nav-item
          a.nav-link(href='/admin/dashboard') Dashboard
        li.nav-item
          a.nav-link(href='/logout') Logout
.container.d-flex.justify-content-center.align-items-center.vh-100
  .return-book-form
    h2.text-center.mb-4 Return Book
    form#return-book-form(action="/books/returnBook?id="+book._id method='POST' name='returnBookForm')
      .row.mb-3
        .col
          label.form-label(for='borrower') Borrower
          input#borrower.form-control(name='borrower' value=book.borrower._id)
        .col
          label.form-label(for='bookId') Book ID
          input#bookId.form-control(name='bookId' value=book.bookId._id) 
      .row.mb-3
        .col
          label.form-label(for='bookName') Book Name
          input#bookName.form-control(value=book.bookName._id name='bookName')
        .col  
          label.form-label(for='genre') Book Genre
          input#genre.form-control(value=book.genre._id name='genre')
      .row.mb-3  
        .col  
          label.form-label(for='copiesBorrowed') Copies Borrowed
          input#copiesBorrowed.form-control(type='number' name='copiesBorrowed' value=book.copiesBorrowed )
        .col
          label.form-label(for='issueDate') Issue Date
          input#issueDate.form-control(type='date' name='issueDate' value=book.issueDate)
      .row.mb-3
        .col
          label.form-label(for='specifiedReturnDate') Specified Return Date
          input#specifiedReturnDate.form-control(type='date' name='specifiedReturnDate' value=book.specifiedReturnDate)
        .col
          label.form-label(for='actualReturnDate') Actual Return Date
          input#actualReturnDate.form-control(type='date' name='actualReturnDate')
      .row.mb-3
        .col
          label.form-label(for='fineStatus') Fine Status(USD)
          input#fineStatus.form-control(type='number' name='fineStatus')
        .col
          label.form-label(for='status') Status
          select#status.form-control(name='status')
            option(value='') Select Status
            option(value='available') Available
      .text-center
        button.btn.btn-primary(type='submit') Return Book
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js')
script(src='/js/fine_calculation.js')
