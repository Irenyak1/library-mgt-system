extends layout1
block content
  .signup-form
    h2.text-center.mb-4 Sign Up
    form#signup-form(action='/register' method='POST' name='signupForm') 
      .mb-3
        label.form-label(for='firstName') First Name
        input#firstName.form-control(type='text' name='firstName')
        small#firstNameErr
      .mb-3
        label.form-label(for='lastName') Last Name
        input#lastName.form-control(type='text' name='lastName')
        small#lastNameErr
      .mb-3
        label.form-label(for='email') Email
        input#email.form-control(type='email' name='email')
        small#emailErr
      .mb-3
        label.form-label(for='password') Password
        .input-group
          input#password.form-control(type='password' name='password' required='')
          button#togglePassword.btn.btn-outline-secondary(type='button')
            i.fas.fa-eye
        small#passwordErr
      .mb-3
        label.form-label(for='mobileNumber') Mobile Number
        input#mobileNumber.form-control(type='tel' name='mobileNumber')
        small#mobileNumberErr
      .text-center
        button.btn.btn-primary(type='submit') Sign Up
        p.mt-3
          | Have an account? 
          a(href='/login') Login!
  script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js")
  script(src="/js/show_password.js")
