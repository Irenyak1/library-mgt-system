extends layout1
block content
  .login-form
    h2.text-center.mb-4 Login
    form#login-form(action='/login' method='POST' name='loginForm') 
      .mb-3
        label.form-label(for='email') Email
        input#email.form-control(type='email' name='email')
        small#emailErr
      .mb-3
        label.form-label(for='password') Password
        .input-group
          input#password.form-control(type='password' name='password' required='')
          button#togglePassword.btn.btn-outline-secondary(type='button')
            i.fas.fa-eye
        small#passwordErr
      .text-center
        button.btn.btn-primary(type='submit') Login
        p.mt-3
          | Don&apos;t have an account? 
          a(href='/register') Signup now!!
  script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js")
  script(src="/js/show_password.js")
  script(src="js/Validation.js") 
